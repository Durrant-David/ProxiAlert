<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <TextView android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="8sp"
        android:text="@string/lbl_new_task_title"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/lbl_new_task_title"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/hint_enter_task"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="4"
        android:textColorHint="@color/hint_enter"
        android:textSize="@dimen/input_new" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:text="@string/hint_enter_address"
        android:textColorHint="@color/hint_enter"
        android:textSize="@dimen/input_new" />

    <Button
        android:id="@+id/setLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setLocation" />

    <EditText
        android:id="@+id/dueDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/hint_enter_due_date"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="4"
        android:textColorHint="@color/hint_enter"
        android:textSize="@dimen/input_new" />

    <EditText
        android:id="@+id/radius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/hint_enter_radius"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="4"
        android:textColorHint="@color/hint_enter"
        android:textSize="@dimen/input_new" />



</LinearLayout>
